#compdef rndy

_rndy() {
    local -a _1st_arguments
    _1st_arguments=(
        '-u:username'
        '-d:domain'
    )

   _describe -t commands "github subcommand" _1st_arguments
 
    _arguments -C \
        '*: : :->value'
 
    case $state in
        value)
            case $words[2] in
                -u)
                    compadd "$@" fiskus fiskus_boulder fiskus.boulder
                ;;
                -d)
                    compadd "$@" twitter.com facebook.com
                ;;
            esac
    esac
}

_rndy "$@"
