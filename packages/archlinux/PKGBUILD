# Maintainer: Maxim Chervonny <fiskus@chervonny.ru>

pkgname=rndy-git
pkgver=20121129
pkgrel=1
pkgdesc="Utility for managing passwords"
arch=('any')
url="https://github.com/fiskus/rndy"
license=('GPL')
depends=('bash' 'git' 'xclip', 'python2-flask')
provides=('rndy')
conflicts=('rndy')

_gitroot="git://github.com/fiskus/rndy.git"
_gitname="rndy"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot
    cd $_gitname
  fi

  msg "GIT checkout done or server timeout"

  mkdir -p ${pkgdir}/usr/bin
  mkdir -p ${pkgdir}/usr/share/rndy
  mkdir -p ${pkgdir}/usr/share/rndy/example/
  mkdir -p ${pkgdir}/usr/share/rndy/cgi/

  cp core/rndy ${pkgdir}/usr/bin
  cp core/rndyrc ${pkgdir}/usr/share/rndy/example/
  cp -r cgi/* ${pkgdir}/usr/share/rndy/cgi/
}
